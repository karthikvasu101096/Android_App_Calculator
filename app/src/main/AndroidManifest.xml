<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karthil.calculator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainCalculator"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalculatorAbout"
            android:label="@string/about_app"
            android:parentActivityName=".MainCalculator" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karthil.calculator.MainCalculator" />
        </activity>
        <activity
            android:name=".CalculatorInfo"
            android:label="@string/title_activity_calculator_info"
            android:parentActivityName=".MainCalculator" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karthil.calculator.MainCalculator" />
        </activity>
    </application>

</manifest>
